<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ieclipse.af.musdk.demo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:listDivider"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:text="百度市场升级SDK 版本：2017-06-07"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:listDivider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/bd_btn_ui"
                style="@style/btn"
                android:text="自定义UI"/>

            <TextView
                android:id="@+id/bd_btn_silence"
                style="@style/btn"
                android:text="静默升级"/>

            <TextView
                android:id="@+id/bd_btn_no_ui"
                style="@style/btn"
                android:text="系统UI"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="12dp"
            android:text="360市场升级SDK 版本：v5.0.7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:listDivider"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/qh_btn_ui"
                style="@style/btn"
                android:text="自定义UI"/>

            <TextView
                android:id="@+id/qh_btn_silence"
                style="@style/btn"
                android:text="静默升级"/>

            <TextView
                android:id="@+id/qh_btn_no_ui"
                style="@style/btn"
                android:text="系统UI"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_log"/>
    </LinearLayout>

</ScrollView>
